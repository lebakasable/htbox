* 
  font-family 'JetBrains Mono'

body 
  margin 0
  overflow hidden
  color #f8f8f2
  background-color #282a36

  &.light
    color #546E7A !important
    background-color #FAFAFA !important

.cm-editor
#preview 
  width 50vw

.cm-editor
  position absolute
  height 50vh
  outline none !important

#preview 
  position absolute
  top 0
  right -10px
  overflow-y scroll
  padding-top 3px
  word-wrap break-word
  height 100vh

  &::-webkit-scrollbar
    display none

.separator
  background-color #8be9fd
  position absolute

  &:nth-of-type(2)
    height 100vh
    width 2px
    top 0
    left 50%

  &:nth-of-type(4)
    height 2px
    width 50vw
    top 50%
    left 0

#dark-mode
  position absolute
  bottom 10px
  right 10px
  background-color #FF79C6
  border none
  padding 5px
  border-radius 100%
  width 50px
  height 50px
  cursor pointer
  outline none

  &:hover
    filter: brightness(85%);
